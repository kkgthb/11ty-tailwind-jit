<div class="relative bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div class="mt-2 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 lg:px-8">
        <div class="sm:text-center lg:text-left">
          <div class="mt-3 text-base text-gray-900 sm:mt-5 sm:text-lg sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
            {{ the_include.message }}
          </div>
          <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
            <div class="rounded-md shadow">
              <a href="{{ the_include.link.url }}" target="_blank" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:bg-indigo-700 md:py-4 md:text-lg md:px-10">
                {{ the_include.link.text }}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>